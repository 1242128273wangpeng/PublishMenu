<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangpeng.publishmenu.MainActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp">

        <FrameLayout
            android:id="@+id/publish_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wangpeng.publishmenu.PublishMenu
                android:id="@+id/publish_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorPrimary" />
        </FrameLayout>

        <com.wangpeng.publishmenu.waveview.PublishWaveView
            android:id="@+id/publish_wave"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/center_layout"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/bg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/fadan" />

            <ImageView
                android:id="@+id/center_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/center_zhankai" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
